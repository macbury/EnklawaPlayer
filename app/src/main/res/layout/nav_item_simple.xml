<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/nav_item_simple_padding"
              xmlns:ioniconview="http://schemas.android.com/apk/res-auto"
              android:weightSum="1">
  <be.webelite.ion.IconView
    android:layout_marginTop="@dimen/nav_item_simple_icon_margin"
    android:layout_marginBottom="@dimen/nav_item_simple_icon_margin"
    android:layout_marginLeft="@dimen/nav_item_simple_title_margin_left"
    ioniconview:name="ion_ionic"
    android:textSize="@dimen/nav_item_simple_icon_text_size"
    android:textColor="?android:attr/textColorPrimary"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_alignParentStart="true"
    android:id="@+id/nav_item_icon_view"
    android:layout_width="@dimen/nav_item_simple_icon_text_size"
    android:layout_height="@dimen/nav_item_simple_icon_text_size"/>
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="?android:attr/textColorPrimary"
    android:textSize="@dimen/nav_item_simple_title_size"
    android:lines="1"
    android:ellipsize="end"
    android:singleLine="true"
    android:layout_centerVertical="true"
    android:text="Large Text"
    android:layout_marginLeft="@dimen/nav_item_simple_title_margin_left"
    android:layout_marginTop="@dimen/nav_item_simple_title_margin_top"
    android:id="@+id/nav_item_title_view"
    android:layout_toEndOf="@+id/nav_item_icon_view" android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/nav_item_icon_view"/>
  <TextView
    android:id="@+id/nav_item_count_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:lines="1"
    android:textColor="?android:attr/textColorTertiary"
    android:textSize="@dimen/nav_item_simple_title_size"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="14dp"
    android:layout_marginBottom="14dp"
    android:layout_marginRight="16dp"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true" android:text="100"/>
</RelativeLayout>