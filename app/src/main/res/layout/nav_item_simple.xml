<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">
  <com.shamanland.fonticon.FontIconTextView
    android:layout_width="@dimen/nav_item_simple_icon_size"
    android:layout_height="@dimen/nav_item_simple_icon_size"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/nav_item_icon_view"/>
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Large Text"
    android:layout_marginLeft="@dimen/nav_item_simple_title_margin_left"
    android:layout_marginTop="@dimen/nav_item_simple_title_margin_top"
    android:id="@+id/nav_item_title_view"
    android:layout_toEndOf="@+id/nav_item_icon_view" android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/nav_item_icon_view"/>
</RelativeLayout>